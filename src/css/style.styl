sm = 1rem
md = 2rem
lg = 3rem
xl = 4rem

size(w=100%,h=100vh)
  width w
  height h

flexCenter(jus=center , alc=jus , direct=row)
  flex-direction direct
  display flex
  justify-content jus
  align-items alc

posCenter(t=50%,l=50%)
  position absolute
  top t
  left l
  transform translate(-50%,-50%)

*
  margin 0
  padding 0
  box-sizing border-box
  
  h1,li,a,h3
    font-family '微軟正黑體'
  li
    font-size md
    // size(100%,auto)
    text-align center
    list-style none
  a
    font-size md
    text-decoration none
    color #fff

@media screen and (min-width 280px)
  h1,i
    font-size md
  h1
    line-height md
  h3 
    font-size sm
 

@media screen and (min-width 400px)
  h1,i
    font-size md
  h1
    line-height 1.2*md

@media screen and (min-width 768px)
  h1,i
    font-size md

@media screen and (min-width 1024px)
  h1
    font-size lg

  
